@model EcommerceApp.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h2>Review deletion</h2>
<div class="container">
    <div class="row justify-content-center">
        <form asp-controller="Review" asp-action="DeleteReview" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="text">Review Text:</label>
                <textarea class="form-control" id="text" name="Text" asp-for="Text" readonly>@Model.Text</textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="rating">Rating:</label>
                <input type="number" class="form-control" id="rating" name="Rating" asp-for="Rating" value="@Model.Rating" readonly/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
        </form>
    </div>
</div>