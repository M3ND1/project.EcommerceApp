@page
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<a class="btn btn-success-outline" asp-action="Create">Create</a>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>ProductCategory relations</th>
            <th>ProductOrder relations</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td class="align-middle">@Html.DisplayFor(model => item.Id)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Description)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.ImageUrl)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Price)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Quantity)</td>
                <td class="align-middle">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Price)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.CreatedAt)</td>
                <td class="align-middle"><a class="btn btn-warning" asp-action="/Edit" asp-action="@item.Id">Edit</a></td>
                <td class="align-middle"><a class="btn btn-info" asp-action="/Details" asp-action="@item.Id">Details</a></td>
                <td class="align-middle"><a class="btn btn-danger" asp-action="/Delete" asp-action="@item.Id">Delete</a></td>
            }
        </tr>
    </tbody>
</table>