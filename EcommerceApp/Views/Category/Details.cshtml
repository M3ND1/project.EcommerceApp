@model EcommerceApp.Models.Category;
@{
    ViewData["Title"] = "Category Edit";
}

<h2 class="text-center">@Model.Name edition</h2>

<div class="container">
    <div class="row justify-content-center">
        <form method="post">
            <caption class="text-center">See details of your @Model.Name category</caption>
            <div class="input-group mb-1">
                <span class="input-group-text" id="add2">Name</span>
                <input aria-describedby="add2" placeholder="@Model.Id" aria-label="@Model.Id" class="form-control" readonly/>
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text" id="add2">Name</span>
                <input aria-describedby="add2" placeholder="@Model.Name" aria-label="@Model.Name" class="form-control" readonly/>
            </div>
            <button asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</button>
            <button class="btn btn-outline-secondary" type="submit" asp-action="Index">Go Back</button>
        </form>
    </div>
</div>