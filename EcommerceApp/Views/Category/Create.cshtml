@model EcommerceApp.Models.Category;
@{
    ViewData["Title"] = "Category Create";
}

<h2 class="text-center">Category Creation</h2>

<div class="container">
    <div class="row justify-content-center">
        <form method="post">
            <caption class="text-center">Enter category name and then you can assign it to your product!</caption>
            <div class="input-group mb-1">
                <span class="input-group-text" id="add2">Name</span>
                <input asp-for="Name" aria-describedby="add2" class="form-control" placeholder="Enter category name" />
            </div>
            <button asp-controller="Category" asp-action="CreateCategory" class="btn btn-success"> Create </button>
            <input class="btn btn-outline-secondary" type="submit" asp-action="Index" value="Go Back" />
        </form>
    </div>
</div>
