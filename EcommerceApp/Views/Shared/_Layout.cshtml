<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceApp</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/font-awesome/css/all.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/EcommerceApp.styles.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand col-1 col-md-1" asp-controller="Home" asp-action="Index">
                    LOGO
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse col-3 col-md-3" id="navbarNav">
                    <div class="d-flex justify-content-between">
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav border">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ProductCategoryOrder" asp-action="Index">All Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Review" asp-action="Index">Reviews</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-muted" id="helpDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Help</a>
                                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="helpDropdown">
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For buyers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For suppliers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Report Abuse</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Bug found?</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-muted" id="helpDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Basket</a>
                                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="helpDropdown">
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For buyers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For suppliers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Report Abuse</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Bug found?</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-muted" id="helpDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">All categories</a>
                                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="helpDropdown">
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For buyers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">For suppliers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Report Abuse</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-muted">Bug found?</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
                <div class="col-5 col-md-5">
                    <form class="form-inline w-100">
                        <div class="input-group" style="width:75%;">
                            <input type="text" class="form-control" placeholder="Search for a product..." aria-label="Search for a product..." aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="button">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-2 col-md-2">
                    <div class="d-flex justify-content-end">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

        <!-- Second Nav -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-white mb-1 border-top border-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav2">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse col-12 col-md-6 justify-content-center" id="navbarNav2">
                    <ul class="navbar-nav nav-fill w-100">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-md-3 ml-auto">
                    <!-- changed col-3 to col-12 -->
                    <div class="collapse navbar-collapse" style="margin-left:30px;" id="navbarNavDropdown2">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dropdown link
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid bg-light w-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-12 col-md-4 col-lg-3 d-flex align-items-center" style="margin-left: 10px;">
            <span class="text-muted">&copy; 2023 - EcommerceApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
        <div class="col-12 col-md-7 col-lg-7 d-flex align-items-center" style="margin-right: 10px;">
            <ul class="nav list-unstyled d-flex">
                <li class="ms-3">
                    <a class="text-muted text-decoration-none" href="#">FAQ</a>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text_nested" href="#">About Ecommerce</a></li>
                        <li><a class="text-muted text_nested">About Ecommerce Group</a></li>
                        <li><a class="text-muted text_nested"> Ecommerce Blog</a></li>
                        <li><a class="text-muted text_nested"> Legal Notice</a></li>
                    </ul>
                </li>
                <li class="ms-3">
                    <a class="text-muted text-decoration-none" href="#">Customer Service</a>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text_nested"> Resources</a></li>
                        <li><a class="text-muted text_nested"> Buyer Partners</a></li>
                        <li><a class="text-muted text_nested"> Ready to Ship</a></li>
                    </ul>
                </li>
                <li class="ms-3">
                    <a class="text-muted text-decoration-none" href="#">Sell on Ecommerce App</a>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text_nested"> Supplier membership</a></li>
                        <li><a class="text-muted text_nested"> Learning Center</a></li>
                        <li><a class="text-muted text_nested"> Partner Program</a></li>
                    </ul>
                </li>
                <li class="ms-3">
                    <a class="text-muted text-decoration-none" href="#">Trade Services</a>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text_nested"> Trade assurance</a></li>
                        <li><a class="text-muted text_nested"> Logistic Services</a></li>
                        <li><a class="text-muted text_nested"> Letter of Credit</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-6 col-md-1 col-lg-1 d-flex align-items-center justify-content-end">
            <ul class="nav list-unstyled d-flex mb-0">
                <li class="ms-3"><a class="text-muted" href="#"><i class="fab fa-facebook fa-xl" style="color: #0443ae;"></i></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><i class="fab fa-instagram fa-xl" style="color: #000000;"></i></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><i class="fab fa-twitter fa-xl" style="color: #08afd9;"></i></a></li>
            </ul>
        </div>
    </footer>






</body>
</html>

